
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row m-4">
    <div class="card">
        <div class="card-header">
            PRODUCTOS
        </div>
        <div class="card-body">
            <table id="tbproductos" class="table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Costo</th>
                        <th>Existencias</th>
                        <th>Fecha Producción</th>

                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#tbproductos').DataTable();
        });
    </script>
}
